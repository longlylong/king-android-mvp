<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/px540dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_shape_white"
        android:orientation="vertical">

        <com.simga.library.widget.BGButton
            android:id="@+id/buttonOne"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px90dp"
            android:gravity="center"
            android:text="@string/take_photo"
            android:textSize="@dimen/px28dp"
            app:normalSolid="@color/white"
            app:normalTextColor="#3992F8"
            app:pressedSolid="@color/pressColor"
            app:topLeftRadius="@dimen/px6dp"
            app:topRightRadius="@dimen/px6dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1dp"
            android:background="@color/diver_dcdcdc" />

        <com.simga.library.widget.BGButton
            android:id="@+id/buttonTwo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px90dp"
            android:gravity="center"
            android:text="@string/select_xiangce"
            android:textSize="@dimen/px28dp"
            app:bottomLeftRadius="@dimen/px6dp"
            app:bottomRightRadius="@dimen/px6dp"
            app:normalSolid="@color/white"
            app:normalTextColor="@color/text_333333"
            app:pressedSolid="@color/pressColor" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px20dp"
        android:background="@color/transparent" />

    <com.simga.library.widget.BGButton
        android:id="@+id/buttonThree"
        app:radii="@dimen/px6dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/px20dp"
        android:layout_height="@dimen/px90dp"
        android:gravity="center"
        android:text="@string/cancle"
        android:textSize="@dimen/px28dp"
        app:normalSolid="@color/white"
        app:normalTextColor="@color/text_999999"
        app:pressedSolid="@color/pressColor" />
</LinearLayout>