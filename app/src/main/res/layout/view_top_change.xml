<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bg_white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/view_top_change_btn1"
            style="@style/Text_Sans_SubTitle_Secondary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selectable_item_bg"
            android:gravity="center"
            android:text="A" />

        <TextView
            android:id="@+id/view_top_change_btn2"
            style="@style/Text_Sans_SubTitle_Secondary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selectable_item_bg"
            android:gravity="center"
            android:text="B" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_white"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:gravity="center">

            <View
                android:id="@+id/view_top_btn1_line"
                android:layout_width="96dp"
                android:layout_height="1dp"
                android:background="@color/wave_blue_main" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_top_btn2_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:gravity="center">

            <View
                android:layout_width="96dp"
                android:layout_height="1dp"
                android:background="@color/wave_blue_main" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/Dividing_Line"
        android:layout_width="match_parent"
        android:layout_height="1px" />
</LinearLayout>