<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ViewFlipper
        android:id="@+id/main_view_flipper"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/main_fragment_a"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <FrameLayout
            android:id="@+id/main_fragment_b"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <FrameLayout
            android:id="@+id/main_fragment_c"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <FrameLayout
            android:id="@+id/main_fragment_d"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </ViewFlipper>

    <com.king.android.view.MainFootView
        android:id="@+id/main_foot"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

