<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 阴影部分 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#05000000"
                android:startColor="#05000000" />

            <corners
                android:bottomLeftRadius="12dip"
                android:bottomRightRadius="12dip"
                android:topLeftRadius="0px"
                android:topRightRadius="0px" />
        </shape>
    </item>

    <!-- 背景部分 -->
    <!-- 形象的表达：bottom代表背景部分在上边缘超出阴影的高度-->
    <!-- right代表背景部分在左边超出阴影的宽度（相对应的offset） -->
    <item
        android:bottom="4dp"
        android:left="1dp"
        android:right="1dp"
        android:top="0dp">

        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="@color/bg_white"
                android:startColor="@color/bg_white" />

            <corners
                android:bottomLeftRadius="3dip"
                android:bottomRightRadius="3dip"
                android:topLeftRadius="0px"
                android:topRightRadius="0px" />
        </shape>
    </item>
</layer-list>